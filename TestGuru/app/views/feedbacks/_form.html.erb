<div class="row justify-content-center mt-3">  
  <div class="col col—md—4">
    <div class="card border-primary">
      <div class="card-body">
        <%= form_for :feedback do |form| %>
          <div class="form-group">
            <p>
              <%= form.label :name, t('.name') %>
              <%= form.text_field :name, id: :feedback_name, class: 'form-control' %>
            </p>

            <p>
              <%= form.label :email, t('.email') %>
              <%= form.email_field :email, id: :feedback_email, class: 'form-control' %>
            </p>
     
            <p>
              <%= form.label :body, t('.body') %>
              <%= form.text_area :body, cols: 60, rows: 10, id: :feedback_body, class: 'form-control' %>
            </p>
   
            <%= form.submit t('.send'), class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
